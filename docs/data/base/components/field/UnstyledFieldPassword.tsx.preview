<Field.Root validate={handleValidate} validateOnChange>
  <Field.Control type="password" />
  <Field.Label>Password</Field.Label>
  <Field.Error render={<ul />}>
    <Field.Validity>
      {(state) => state.errors.map((error) => <li key={error}>{error}</li>)}
    </Field.Validity>
  </Field.Error>
</Field.Root>